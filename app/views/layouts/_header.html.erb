<header class="fixed-top">
  <nav class="navbar navbar-expand-lg navbar-light bg-light py-0">
    <ul class="navbar-nav mr-auto">
      <%= link_to "sample app", root_path, class: "navbar-brand" %>
      <%= nav_item "File", "#" %>
      <%= nav_item "Edit", "#" %>
      <%= nav_item "View", "#" %>
      <%= dropdown "Projects", "#" do %>
        <%= dropdown_menu do %>
          <%= dropdown_item("Add Project...", "#") %>
          <%= dropdown_item("Edit", "#") %>
        <% end %>
      <% end %>
      <%= nav_item "Tools", "#" %>
    </ul>
  
    <ul class="navbar-nav justify-content-end">
      <%= nav_icon "home", root_path %>
      <%= nav_icon "help", help_path %>
      <% if logged_in? %>
        <%= nav_icon "people", users_path %>
        <%= dropdown_icon "settings", "#" do %>
          <%= dropdown_menu "dropdown-menu dropdown-menu-right" do %>
            <%= dropdown_item_icon("person", current_user, "Profile") %>
            <%= dropdown_item_icon("account_box", edit_user_path(current_user), "Update Profile") %>
            <%= dropdown_divider %>
            <%= link_to mi.exit_to_app.css_class('center-vertically').to_s << " Logout", logout_path, method: :delete, class: "dropdown-item" %>
          <% end %>
        <% end %>
      <% else %>
        <%= nav_item "Log in", login_path %>
      <% end %>
    </ul>
  </nav>
</header>